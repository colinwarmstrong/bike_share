<h1>Trips Dashboard</h1>
<p>Average Ride Duration: <%= (@average_ride_duration / 60.to_f).to_i %> minutes</p>
<p>Longest Ride Duration: <%= (@longest_ride_duration / 60.to_f).to_i %> minutes</p>
<p>Shortest Ride Duration: <%= (@shortest_ride_duration / 60.to_f).to_i %> minutes</p>
<br>
<p>Station Where Most Rides Start: <%= @most_frequent_start_station.name %></p>
<p>Station Where Most Rides End: <%= @most_frequent_end_station.name %></p>
<br>

<% ordered_rides = @rides_per_month.sort_by { |date, rides| date } %>
<% ordered_rides.each do |date, count| %>
  <p><%= date.strftime('%B') %> <%= date.strftime('%Y') %> Rides: <%= count %></p>
<% end %>

<% ordered_years = @rides_per_year.sort_by { |date, rides| date} %>
<% ordered_years.each do |year, count| %>
  <p>Rides in <%= year.strftime('%Y') %>: <%= count %></p>
<% end %>

<div class="most-ridden-bike">
  <h3>Most Ridden Bike</h3>
  <p>Id: <%= @most_ridden_bike.keys.first %></p>
  <p>Rides: <%= @most_ridden_bike.values.first %></p>
</div>

<div class="least-ridden-bike">
  <h3>Least Ridden Bike</h3>
  <p>Id: <%= @least_ridden_bike.keys.first %></p>
  <p>Rides: <%= @least_ridden_bike.values.first %></p>
</div>

<h3>Subscription Types</h3>
<div class="subscription-types">
  <% @subscription_type_count.each do |subscription, count| %>
    <h4>Subscription Type: <%= subscription %>, Count: <%= count %></h4>
    <p>Percentage of Total Trips: <%= ((count.to_f / @total_trips.to_f) * 100).round(2) %>%</p>
  <% end %>
</div>

<div class="most-rides-by-date">
  <h4>Date With Most Rides: <%= @date_with_most_rides[:date].strftime('%m/%d/%Y') %></h4>
  <h4>Ride Count: <%= @date_with_most_rides[:rides] %></h4>
  <h5>Weather Conditions:</h5>
  <p>Max Temperature: <%= @date_with_most_rides[:condition].max_temperature %> ºF</p>
  <p>Mean Temperature: <%= @date_with_most_rides[:condition].mean_temperature %> ºF</p>
  <p>Min Temperature: <%= @date_with_most_rides[:condition].min_temperature %> ºF</p>
  <p>Mean Humidity: <%= @date_with_most_rides[:condition].mean_humidity %>%</p>
  <p>Mean Visibility: <%= @date_with_most_rides[:condition].mean_visibility %> miles</p>
  <p>Mean Wind Speed: <%= @date_with_most_rides[:condition].mean_wind_speed %> mph</p>
  <p>Precipitation: <%= @date_with_most_rides[:condition].precipitation %> "</p>
</div>

<div class="least-rides-by-date">
  <h4>Date With Fewest Rides: <%= @date_with_least_rides[:date].strftime('%m/%d/%Y') %></h4>
  <h4>Ride Count: <%= @date_with_least_rides[:rides] %></h4>
  <h5>Weather Conditions:</h5>
  <p>Max Temperature: <%= @date_with_least_rides[:condition].max_temperature %> ºF</p>
  <p>Mean Temperature: <%= @date_with_least_rides[:condition].mean_temperature %> ºF</p>
  <p>Min Temperature: <%= @date_with_least_rides[:condition].min_temperature %> ºF</p>
  <p>Mean Humidity: <%= @date_with_least_rides[:condition].mean_humidity %>%</p>
  <p>Mean Visibility: <%= @date_with_least_rides[:condition].mean_visibility %> miles</p>
  <p>Mean Wind Speed: <%= @date_with_least_rides[:condition].mean_wind_speed %> mph</p>
  <p>Precipitation: <%= @date_with_least_rides[:condition].precipitation %> "</p>
</div>
