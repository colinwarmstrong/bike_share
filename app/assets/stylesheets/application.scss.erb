@import "bootstrap";

header {
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.jumbotron {
  border-radius: 0%;
  margin: 0px;
}

.table-header {
  background-color: rbga(53, 125, 63, 0.5);
  border: 0px;
}

.pagination-links {
  font-size: 20px;
  margin-bottom: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.edit-button {
  padding: 3px;
  padding-left: 12px;
  padding-right: 12px;
}

.delete-button {
  padding: 3px;
}

.retired-button {
  padding-left: 28px;
  padding-right: 28px;
}

.station-index-main {
  display: flex;
  justify-content: center;
}

.trip-index-main {
  display: flex;
  justify-content: center;
}

.conditions-index-main {
  display: flex;
  justify-content: center;
}

.button-group {
  width: 20%;
  display: flex;
  justify-content: space-around;
}

.show-info {
  border-bottom: 1px solid rgba(160, 175, 186, 0.4);
}

.show-buttons {
  margin-top: 10px;
  display: flex;
  justify-content: center;
}

.show-main {
  margin-top: 12px;
  font-size: 32px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.show-edit-button {
  padding-left: 23px;
  padding-right: 23px;
}

.accessory-show-main {
  display: flex;
  justify-content: space-around;
}

.accessory-show-subheader {
  display: flex;
  justify-content: center;
}

.accessory-card {
  font-size: 22px;
  border-radius: 5px;
  width: 600px;
  height: 400px;
}

.accessory-show-buttons {
  width: 400px;
  margin-top: 10px;
  display: flex;
  justify-content: space-around;
}

#table-entry {
  padding-top: 10px;
  padding-bottom: 10px;
  text-align: center;
}

#bike-id {
  font-size: 8px;
}

#header {
  background-color: rgba(52, 123, 246, 0.75);
}

#trips-index-table {
  width: 1800px;
}

#station-index-table {
  width: 55%;
}

#conditions-index-table {
  width: 70%;
}

#trip-index-table {
  width: 90%;
}
