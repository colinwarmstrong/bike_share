<h1>Trips</h1>

<% if admin_user? %>
  <p><%= link_to 'Create New Trip', new_admin_trip_path %><p>
<% end %>

<% @trips.each do |trip| %>
  <h3><%= link_to "Trip ##{trip.id}", trip_path(trip) %></h3>
  <p>Duration: <%= trip.duration %></p>
  <p>Start Date: <%= trip.start_date.strftime('%m/%d/%Y') %></p>
  <p>End Date: <%= trip.end_date.strftime('%m/%d/%Y') %></p>
  <% unless trip.start_station.nil? %>
    <p>Start Station: <%= trip.start_station.name %></p>
  <% end %>
  <% unless trip.end_station.nil? %>
    <p>End Station: <%= trip.end_station.name %></p>
  <% end %>
  <p>Bike ID: <%= trip.bike_id %></p>
  <p>Subscription Type: <%= trip.subscription_type %></p>
  <p>Zip Code: <%= trip.zip_code %></p>
  <% if admin_user? %>
    <%= button_to 'Edit', edit_admin_trip_path(trip), method: :get %>
    <%= button_to 'Delete', admin_trip_path(trip), method: :delete, data: {confirm: "Really want to delete this trip?"} %>
  <% end %>
<% end %>

<%= will_paginate @trips %>
