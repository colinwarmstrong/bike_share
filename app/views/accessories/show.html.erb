<h1><%= @accessory.title %></h1>
<img src='<%= @accessory.image %>' alt="Accessory Image">
<p><%= @accessory.description %></p>
<p>Price: <%= number_to_currency(@accessory.price) %></p>

<% if @accessory.retired? %>
  <%= button_to 'Accessory Retired', nil, disabled: true %>
<% else %>
  <%= button_to 'Add to Cart', carts_path(accessory_id: @accessory.id, on_show: true) %>
<% end %>
