<%= form_for @trip do |f| %>
  <%= f.label :duration %>
  <%= f.number_field :duration, step: 1 %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <%= f.label :start_station %>
  <%= f.collection_select :start_station_id, Station.order(:name), :id, :name, include_blank: true %>

  <%= f.label :end_station %>
  <%= f.collection_select :end_station_id, Station.order(:name), :id, :name, include_blank: true %>

  <%= f.label :bike_id %>
  <%= f.number_field :bike_id, step: 1 %>

  <%= f.label :zip_code%>
  <%= f.number_field :zip_code, in: 11111..99999, step: 1 %>

  <%= f.submit %>
<% end %>
