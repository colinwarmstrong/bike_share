<div>
  <%= form_for [:admin, @trip] do |f| %>
    <div>
      <%= f.label :duration %>
      <%= f.number_field :duration, step: 1 %>
    </div>
    <div>
      <%= f.label :start_date %>
      <%= f.date_field :start_date %>
    </div>
    <div>
      <%= f.label :end_date %>
      <%= f.date_field :end_date %>
    </div>
    <div>
      <%= f.label :start_station %>
      <%= f.collection_select :start_station_id, Station.order(:name), :id, :name, include_blank: true %>
    </div>
    <div>
      <%= f.label :end_station %>
      <%= f.collection_select :end_station_id, Station.order(:name), :id, :name, include_blank: true %>
    </div>
    <div>
      <%= f.label :bike_id %>
      <%= f.number_field :bike_id, step: 1 %>
    </div>
    <div>
      <%= f.label :subscription_type %>
      <%= f.select :subscription_type, ['Customer', 'Subscriber'], include_blank: true %>
    </div>
    <div>
      <%= f.label :zip_code%>
      <%= f.number_field :zip_code, in: 11111..99999, step: 1 %>
    </div>
    <div class='form-buttons'>
      <%= link_to 'Cancel', trips_path, class:'btn btn-danger form-cancel-button' %>
      <%= f.submit class:'btn btn-success' %>
    </div>
  <% end %>
</div>
